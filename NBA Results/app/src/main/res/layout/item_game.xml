<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/text_game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.07 01:30"
        android:layout_below="@id/image_logo"
        android:gravity="center"
        android:padding="10dp"
        />
    <LinearLayout
        android:id="@+id/layout_teams"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_hteam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tim 1"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/text_ateam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tim 2"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout_teams"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_teamH_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/text_teamA_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>



</RelativeLayout>